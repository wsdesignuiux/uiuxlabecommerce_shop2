<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="38.4dp"
        android:layout_height="38.4dp"
        android:src="@drawable/girl11"
        android:scaleType="fitXY"
        app:riv_oval="true"/>


    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@+id/image"
        android:fontFamily="@font/sfns_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.4sp"
        android:layout_marginLeft="15.4dp"
        android:textColor="@color/white"
        android:text="Liliana Armstrong"/>

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/name"
        android:layout_toRightOf="@+id/image"
        android:fontFamily="@font/sfns_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10.6sp"
        android:layout_marginLeft="15.4dp"
        android:textColor="@color/white"
        android:text="Great products!"/>


    <TextView
        android:layout_toRightOf="@+id/name"
        android:fontFamily="@font/arial_mt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="02:45 PM"
        android:gravity="end"
        android:layout_marginRight="30.7dp"
        android:textSize="8.6sp"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/line"
        android:layout_below="@id/text"
        android:layout_toRightOf="@id/image"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="invisible"
        android:layout_marginTop="17.1dp"
        android:layout_marginRight="30.7dp"
        android:layout_marginLeft="15.4dp"
        android:background="#33ffffff" />



    <ImageView
        android:id="@+id/replay"
        android:layout_below="@id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.7dp"
        android:src="@drawable/reply" />

    <TextView
        android:layout_toRightOf="@+id/replay"
        android:layout_below="@+id/line"
        android:fontFamily="@font/sfns_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:layout_marginLeft="15.4dp"
        android:layout_marginTop="14.5dp"
        android:textColor="@color/white"
        android:textSize="10.6sp"/>


    <ImageView
        android:layout_toLeftOf="@id/text3"
        android:layout_below="@id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.7dp"
        android:paddingRight="13.9dp"
        android:src="@drawable/like" />


    <TextView
        android:id="@+id/text3"
        android:layout_below="@+id/line"
        android:fontFamily="@font/sfns_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30.5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="10.6sp"/>



</RelativeLayout>